<% if session[:is_valid] %>
    <h3><%= @this_member['name']%></h3>
    <a href=<%= @this_member['at_sfn'] %> target=_blank><img src= <%= @this_member['avatar_url_medium'] %>><h5>Full user profile</a></h5>
    
    <br />
    
    <% if @topics.size > 0 then %>
        <table class="table table-striped table-bordered table-condensed">
        <thead>
          <tr>
            <th>Type</th>
            <th>Subject</th>
            <th>Replies</th>
            <th>Me toos</th>
          </tr>
        </thead>
    
        <tbody>
            <% @topics.each { |topic| %>
              <tr>
                <td><img src=/assets/<%= topic['style'] %>.png></td>
                <td><a href=<%= topic['at_sfn'] %> target=_blank><%= topic['subject'] %></a></td>
                <td><%= topic['reply_count'] %></td>
                <td><%= topic['me_too_count'] %></td>
              </tr>
            <% } %>
        </tbody>
    <% else %>
        <h4>No topics</h4>
    <% end %>
    </table>
<% else %>
Authentication failed
<% end %>