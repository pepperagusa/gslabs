<img src= <%= @this_user['avatar_url_medium'] %>>
<a href=<%= @this_user['at_sfn'] %> target=_blank><h3><%= @this_user['name']%></h3></a>

<% @identity.each_pair do |k, v|%>
<h6><%= k %>: <%= v %></h6>
<% end %>
<br />

<% if @topics.size > 0 then %>
    <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Type</th>
        <th>Subject</th>
        <th>Replies</th>
        <th>Me toos</th>
      </tr>
    </thead>

    <tbody>
        <% @topics.each { |topic| %>
          <tr>
            <td><img src=/assets/<%= topic['style'] %>.png></td>
            <td><a href=<%= topic['at_sfn'] %> target=_blank><%= topic['subject'] %></a></td>
            <td><%= topic['active_replies'] %></td>
            <td><%= topic['me_too_count'] %></td>
          </tr>
        <% } %>
    </tbody>
<% else %>
    <h4>No topics</h4>
<% end %>
</table>
