<% if @total_topics > 0 then %>
    <h3><%= @this_user_name %></h3>
    <img src= <%= @this_user_avatar %>><br />
<% end %>

<br />
<h4><%= @total_topics %> topics followed:</h4>
<br/>

<table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Type</th>
        <th>Subject</th>
        <th>Replies</th>
        <th>Me toos</th>
      </tr>
    </thead>

    <tbody>
        <% @topics.each do |topic| %>
          <tr>
            <td><img src=/assets/<%= topic['style'] %>.png></td>
            <td><a href=<%= topic['at_sfn'] %> target=_blank><%= topic['subject'] %></a></td>
            <td><%= topic['reply_count'] %></td>
            <td><%= topic['me_too_count'] %></td>
          </tr>
        <% end %>
    </tbody>
</table>
