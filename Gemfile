source 'http://rubygems.org'

gem 'rails', '3.2.11'
gem 'oauth'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

gem 'jquery-rails'

group :production do
  gem 'pg'
  gem 'newrelic_rpm'
end

group :development, :test do
  gem 'sqlite3'
end
